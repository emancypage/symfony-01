{% extends 'base.html.twig' %}

{% block body %}

	{% for message in app.flashes('notice') %}

		<div class="alert alert-success">
			{{ message }}
		</div>

	{% endfor %}

	<small class="d-block text-right mt-3">
		<a href="{{ path('micro_post_add') }}">Add new</a>
	</small>

	<h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>

	{% for post in posts %}
		<small class="d-block text-right mt-3">
			<a href="{{ path('micro_post_edit', {'id': post.id}) }}">Edit</a>
			<a href="{{ path('micro_post_delete', {'id': post.id}) }}" class="alert-link">Delete</a>
		</small>
		<a href="{{ path('micro_post_post', {'id': post.id}) }}">
			{{ include('micro-post/raw-post.html.twig', { 'post': post}) }}
		</a>
	 {% endfor %}
{% endblock %}